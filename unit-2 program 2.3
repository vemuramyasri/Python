class Animal: 
    def make_sound(self): 
        print("Animal makes a sound") 
 
class Dog(Animal): 
    def make_sound(self): 
        print("Dog says: Woof!") 
 
class Cat(Animal): 
    def make_sound(self): 
        print("Cat says: Meow!") 
class Bird(Animal): 
    def make_sound(self): 
        print("Bird says: Tweet!")
        animals = [Dog(), Cat(), Bird()] 
 
# Polymorphism: same method behaves differently for each object 
for animal in animals: 
    animal.make_sound()
